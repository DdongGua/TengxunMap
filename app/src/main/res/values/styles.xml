<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme1" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/mActionBar</item>
    </style>

    <style name="mActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">#1f00</item>

    </style>
    <style name="toolbar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DivideStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_color</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="LoginPhoneRlStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_size_mini</item>
        <item name="android:paddingLeft">@dimen/base_size4</item>
        <item name="android:paddingRight">@dimen/base_size4</item>
    </style>

    <style name="LoginPhoneInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_marginLeft">@dimen/base_size4</item>
        <item name="android:layout_marginRight">@dimen/base_size4</item>
        <item name="android:background">@null</item>
    </style>

    <style name="LoginPhoneIconStyle">
        <item name="android:layout_width">@dimen/base_size4</item>
        <item name="android:layout_height">@dimen/base_size4</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DividerHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
    </style>

    <style name="LoginChooseButtonStyle">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_content_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/base_size2</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="homeshop_progrss" parent="Widget.AppCompat.ProgressBar">
        <item name="android:maxHeight">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>
</resources>
